[
  {
    "name": "drone-agent",
    "image": "drone/agent:0.8",
    "cpu": 10,
    "memory": 512,
    "entryPoint": [
      "/bin/drone-agent"
    ],
    "environment": [
      { "name": "DRONE_SERVER", "value": "${drone_server}:9000" },
      { "name": "DRONE_SECRET", "value": "123456" }
    ],
    "mountPoints": [{
      "sourceVolume": "dockersock",
      "containerPath": "/var/run/docker.sock"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-stream-prefix": "drone",
        "awslogs-group": "${log_group_drone_agent}",
        "awslogs-region": "${log_group_region}"
      }
    }
  }
]
